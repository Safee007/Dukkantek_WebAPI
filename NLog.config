<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="logFilePath" value="D:\ALTPAYCore\WEBAPI-${shortdate}.log" />
  <variable name="imagesLogFilePath" value="D:\ALTPAYCore\WEBAPIImages-${shortdate}.log" />

  <targets>
    <target name="logFile" xsi:type="File" fileName="${logFilePath}" layout="${longdate} | LEVEL=${level:upperCase=true}: ${message}" keepFileOpen="true" archiveAboveSize="50000000"/>
    <target name="imagesLogFile" xsi:type="File" fileName="${imagesLogFilePath}" layout="${longdate} | LEVEL=${level:upperCase=true}: ${message}" keepFileOpen="true" archiveAboveSize="50000000"/>
  </targets>

  <rules>
	<logger name="imagesLogFile" minlevel="Info" writeTo="imagesLogFile" final="true"  />
    <logger name="*" minlevel="Info" writeTo="logFile" final="true"  />
    
  </rules>
</nlog>
